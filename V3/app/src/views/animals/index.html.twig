<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
<br>
<div class="d-flex justify-content-around">
    <button class="btn btn-primary"><a href="?action=addAnimalView" class="text-white text-decoration-none">Ajouter un Animal</a></button>
    <button class="btn btn-primary"><a href="?action=indexEqp" class="text-white text-decoration-none">Voir les Equipements</a></button>

</div>
<div class="container mt-5">
    <table class="table table-striped">
        <thead>
        <tr>

            <th>id</th>
            <th>Type</th>
            <th>Sante</th>
            <th>Age</th>
            <th>Equipements</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for Animal in listA %}
            <tr>
                <td>{{ Animal.getIdAnimal() }}</td>
                <td>{{ Animal.getTypeA() }}</td>
                <td>{{ Animal.getSante() }}</td>
                <td>{{ Animal.getAge() }}</td>
                <td>{{ Animal.getEquipements().getNom() }}</td>
                <td>
                    <button class="btn btn-outline-primary btn-sm"><a href="?action=updateAnimalView&id={{ Animal.getIdAnimal()}}" class="text-dark text-decoration-none">Modifier</a></button>
                    <button class="btn btn-outline-danger btn-sm"><a href="?action=deleteAnimal&id={{ Animal.getIdAnimal() }}" class="text-dark text-decoration-none">Supprimer</a></button>

                </td>

            </tr>
        {%endfor %}
        </tbody>
    </table>

</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>