<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
<br>
    <div class="d-flex justify-content-around">
        <button class="btn btn-primary"><a href="?action=addEqpView" class="text-white text-decoration-none">Ajouter un equipement</a></button>
        <button class="btn btn-primary"><a href="?action=indexAnimal" class="text-white text-decoration-none">Voir La liste des Animaux</a></button>
    </div>
    <div class="container mt-5">
        <table class="table table-striped">
           <thead>
           <tr>

               <th>id</th>
               <th>Nom</th>
               <th>Etat</th>
               <th>Disponibilite</th>
               <th>Actions</th>
           </tr>
           </thead>
            <tbody>
            {% for eqp in list %}
            <tr>
                <td>{{ eqp.getId() }}</td>
                <td>{{ eqp.getNom() }}</td>
                <td>{{ eqp.getEtat }}</td>
                <td>{{ eqp.getDisponibilite() }}</td>
                <td>
                    <button class="btn btn-outline-primary btn-sm"><a href="?action=updateEqpView&id={{ eqp.getId() }}" class="text-dark text-decoration-none">Modifier</a></button>
                    <button class="btn btn-outline-danger btn-sm"><a href="?action=deleteEqp&id={{ eqp.getId() }}" class="text-dark text-decoration-none">Supprimer</a></button>

                </td>

            </tr>
            {%endfor %}
            </tbody>
        </table>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>


</body>
</html>