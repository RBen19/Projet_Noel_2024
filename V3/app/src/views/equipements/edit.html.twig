<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body>
<div class="container mt-5">
    <form method="POST" action="?action=UpdateEqp"> <div class="mb-3">
            <input type="hidden" name="id" value="{{ Eqp.getId() }}">
            <label for="nom" class="form-label">Nom</label>
            <input type="text" class="form-control" id="nom" name="nom" required value="{{ Eqp.getNom() }}">
        </div>
        <div class="mb-3">
            <label for="etat" class="form-label">État</label>
            <select class="form-select" id="etat" name="etat" required>
                {% for etat in ['Excellent', 'Bon', 'Moyen', 'Mediocre'] %}
                    <option value="{{ etat }}" {% if etat == Eqp.getEtat %}selected{% endif %}>{{ etat }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="mb-3">
            <label for="disponibilite" class="form-label">Disponibilité</label>
            <select class="form-select" id="disponibilite" name="disponibilite" required>
                {% for dispo in ['disponible','indisponible'] %}
                    <option value="{{ dispo }}" {% if dispo ==Eqp.getDisponibilite() %}selected{% endif %}>{{ dispo }}</option>
                {% endfor %}
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Valider</button>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>